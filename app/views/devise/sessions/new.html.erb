	<div class="container mx-auto">
			<div class="flex justify-center px-6 my-12">
				<!-- Row -->
				<div class="w-full xl:w-3/4 lg:w-11/12 flex">
					<!-- Col -->
					<div
						class="w-full h-auto bg-gray-200 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
						style="background-image: url(<%= asset_path('signup2') %>);"
					></div>
					<!-- Col -->
					<div class="w-full lg:w-1/2 bg-gray-200 p-5 rounded-lg lg:rounded-l-none">
						<h3 class="pt-4 text-2xl text-center">Welcome Back!</h3>
						<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class:"px-8 pt-6 pb-8 mb-4 bg-gray-200 rounded" } do |f| %>
						    <div class="mb-4">
								<%= f.label :email, class:"block mb-2 text-sm font-bold text-gray-700" %>
								<%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder:"janedoe@email.com" %>
								<%= field_has_error(:email, resource)%>
							</div>
							<div class="mb-4">
								<%= f.label :password, class:"block mb-2 text-sm font-bold text-gray-700" %>
								<%= f.password_field :password, required: true, autocomplete: "new-password", class:"w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder:"Your Password" %>
								<%= field_has_error(:password, resource)%>
							</div>
							<% if devise_mapping.rememberable? %>
							    <div class="mb-4">
								  <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
								  <%= f.label :remember_me, class:"text-sm" %>
								</div>
							<% end %>
							<div class="mb-6 text-center">
								<%= f.submit "Sign in", class:"w-full px-4 py-2 font-bold text-white bg-gray-400 rounded hover:bg-gray-600 focus:outline-none focus:shadow-outline" %>
							</div>
							<hr class="mb-6 border-t" />
						<% end %>
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
	</div>
