<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <div class="flex flex-col items-center justify-between lg:flex-row">
    <div class="mb-10 lg:max-w-lg lg:pr-5 lg:mb-0">
      <div class="max-w-xl mb-6">
        <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl sm:leading-none">
          <%= t('.header_part1')%><br class="hidden md:block" />
          <%= t('.header_part2')%>
        </h2>
        <p class="text-base text-gray-700 md:text-lg">
          <%= t('.header_paragraph')%>
        </p>
      </div>
      <div class="flex items-center">
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-pink-300 rounded-md filter blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
          <%= link_to t('.browse_salons'), businesses_path, class:"relative px-5 py-4 bg-pink-200 text-pink-600 rounded-md leading-none flex"%>
        </div>
      </div>
    </div>
    <div class="relative lg:w-1/2">
      <%= image_tag 'hero.jpg', class:"object-cover w-full h-56 rounded shadow-lg sm:h-96", alt:"home image"%>
    </div>
  </div>
</div>

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <h1 class="text-3xl font-bold text-gray-900 mb-10"><%= t('.cities_section_header')%></h1>
  <div class="grid sm:grid-cols-3 gap-4 grid-cols-2">
    <% @cities.each do |city| %>
    <div>
      <%= link_to businesses_path(salon_city: city) do %>
        <h3 class="text-lg font-semibold text-gray-500 mt-2"><%= t('.salons_in')%> <%= city.name%></h3>
        <div class="bg-gray-300 h-44">
        <% if city.city_image.attached? %>
          <%= image_tag city.city_image, class:"h-44 w-full object-cover align-middle rounded hover:opacity-50"%>
        <% end %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <div class="max-w-xl sm:mx-auto lg:max-w-2xl">
    <div class="flex flex-col mb-16 sm:text-center sm:mb-0">
      <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
        <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl md:mx-auto">
          <%= t('.cta_section_h2')%>
        </h2>
        <p class="text-base text-gray-700 md:text-lg">
          <%= t('.cta_section_p')%>
        </p>
      </div>
      <div>
        <%= link_to new_dashboard_business_path, class:"text-pink-600 py-2 mt-auto mb-2 focus:outline-none hover:text-pink-700 text-lg px-4 pb-2" do %>
          <%= t('.cta_section_btn')%>
          <svg class="inline-block w-3 ml-2" fill="currentColor" viewBox="0 0 12 12">
            <path d="M9.707,5.293l-5-5A1,1,0,0,0,3.293,1.707L7.586,6,3.293,10.293a1,1,0,1,0,1.414,1.414l5-5A1,1,0,0,0,9.707,5.293Z"></path>
          </svg>
      <% end %>
      </div>
    </div>
  </div>
</div>