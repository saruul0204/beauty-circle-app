<div class="shadow lg:w-1/2 mx-auto rounded-lg bg-white overflow-hidden block p-8">
  <h2 class="font-bold text-2xl mb-6 text-gray-800 border-b pb-2">Appointment Details</h2>

  <%= form_with(model: [:dashboard, business, appointment]) do |form| %>
    <div class="mb-4">
      <label class="text-gray-800 block mb-1 font-bold text-sm tracking-wide">Appointment title</label>
      <%= form.text_field :title, required: true, class:"bg-gray-50 appearance-none border-2 border-gray-200 rounded-lg w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-pink-500" %>
      <%= field_has_error(:title, appointment )%>
    </div>

    <div class="mb-4">
      <label class="text-gray-800 block mb-1 font-bold text-sm tracking-wide">Client name</label>
      <%= form.text_field :client_name, required: true, class:"bg-gray-50 appearance-none border-2 border-gray-200 rounded-lg w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-pink-500" %>
      <%= field_has_error(:client_name, appointment )%>
    </div>

    <div class="mb-4">
      <label class="text-gray-800 block mb-1 font-bold text-sm tracking-wide">Client email</label>
      <%= form.text_field :client_email, required: true, class:"bg-gray-50 appearance-none border-2 border-gray-200 rounded-lg w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-pink-500" %>
      <%= field_has_error(:client_email, appointment )%>
    </div>

    <div class="mb-4">
      <label class="text-gray-800 block mb-1 font-bold text-sm tracking-wide">Select start date</label>
      <%= form.datetime_field :start_time, required: true, class: "bg-gray-50 appearance-none border-2 border-gray-200 rounded-lg w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-pink-500", min: Date.today %>
      <%= field_has_error(:start_time, appointment )%>
    </div>

    <div class="mb-4">
      <label class="text-gray-800 block mb-1 font-bold text-sm tracking-wide">Select end date</label>
      <%= form.datetime_field :end_time, required: true, class: "bg-gray-50 appearance-none border-2 border-gray-200 rounded-lg w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-pink-500", min: Date.today %>
      <%= field_has_error(:end_time, appointment )%>
    </div>

    <div class="inline-block w-64 mb-4">
      <label class="text-gray-800 block mb-1 font-bold text-sm tracking-wide">Select treatment</label>
      <%= form.collection_select :treatment_id, @business.treatments, :id, :name, {prompt: "Treatment"} , {required: true, class:"block appearance-none w-full bg-gray-50 border-2 border-gray-200 hover:border-gray-500 px-4 py-2 pr-8 rounded-lg leading-tight focus:outline-none focus:bg-white focus:border-pink-500 text-gray-700"} %>
      <%= field_has_error(:treatment_id, appointment )%>
    </div>

    <div class="mt-8 text-right">
        <%= form.submit "Submit", class: "bg-white hover:bg-gray-100 text-gray-700 font-semibold py-2 px-4 border border-gray-300 rounded-lg shadow-sm mr-2" %>
    </div>
  <% end %>
</div>