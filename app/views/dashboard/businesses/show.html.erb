  </div>
  <div class="w-full md:w-5/12 px-4 mr-auto ml-auto mt-4">
    <% if @business.images.attached? %>
    <div data-controller="lightbox" data-lightbox-options-value='{"controls": true}' class="container grid grid-cols-2 gap-2 mx-auto ">
      <% @business.images.each do |image| %>
        <%= image_tag(image, class:"h-48 w-full object-cover align-middle rounded hover:opacity-50", data: { src: url_for(image) }) %>
      <% end %>
    </div>
    <% end %>
